                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" CommandParameter="{Static enum:TappedEnum.T4}"></TapGestureRecognizer>
                </componentes:LabelAwesome.GestureRecognizers>
            </componentes:LabelAwesome>
        </StackLayout>
  </ContentView.Content>
</ContentView>