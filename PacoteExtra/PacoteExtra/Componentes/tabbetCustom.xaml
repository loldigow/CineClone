            <componentes:LabelAwesome x:Name="Tabb3" Text="&#xf02b;"  Padding="20" HorizontalTextAlignment="Center" FontSize="36" HorizontalOptions="FillAndExpand" Style="{StaticResource LabelDefalDescricao}" VerticalOptions="FillAndExpand">
