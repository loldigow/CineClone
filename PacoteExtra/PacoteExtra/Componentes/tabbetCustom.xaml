            <componentes:LabelAwesome x:Name="Tabb4" Text="&#xf007;" Padding="20" HorizontalTextAlignment="Center" FontSize="36" HorizontalOptions="FillAndExpand" Style="{StaticResource LabelDefalDescricao}" VerticalOptions="FillAndExpand">
