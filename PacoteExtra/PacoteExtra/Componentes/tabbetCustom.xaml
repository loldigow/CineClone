            </componentes:LabelAwesome>
            <componentes:LabelAwesome x:Name="Tabb2" Text="&#xf008;"   Padding="20" HorizontalTextAlignment="Center" FontSize="36" HorizontalOptions="FillAndExpand" Style="{StaticResource LabelDefalDescricao}" VerticalOptions="FillAndExpand">
