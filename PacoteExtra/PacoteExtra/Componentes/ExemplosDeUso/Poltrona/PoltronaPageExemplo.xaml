                <componentes:PoltronaComponente DescricaoPoltrona="9" SelecaoCommand="{Binding PoltronaClickCommand}"></componentes:PoltronaComponente>
                <componentes:PoltronaComponente DescricaoPoltrona="10" SelecaoCommand="{Binding PoltronaClickCommand}"></componentes:PoltronaComponente>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <componentes:PoltronaComponente DescricaoPoltrona="11" SelecaoCommand="{Binding PoltronaClickCommand}"></componentes:PoltronaComponente>
                <componentes:PoltronaComponente DescricaoPoltrona="12" SelecaoCommand="{Binding PoltronaClickCommand}"></componentes:PoltronaComponente>
                <componentes:PoltronaComponente DescricaoPoltrona="13" SelecaoCommand="{Binding PoltronaClickCommand}"></componentes:PoltronaComponente>
                <componentes:PoltronaComponente DescricaoPoltrona="14" SelecaoCommand="{Binding PoltronaClickCommand}" Ocupado="true"></componentes:PoltronaComponente>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>