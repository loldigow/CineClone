<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:componentes="clr-namespace:PacoteExtra.Componentes"
             x:Class="PacoteExtra.Componentes.DropDown">
  <ContentView.Content>
        <Frame Padding="0" x:Name="Frame" BackgroundColor="{StaticResource CorBackgroundSecundario}">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="ClickDoDropDown" ></TapGestureRecognizer>
            </Frame.GestureRecognizers>
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <StackLayout HorizontalOptions="FillAndExpand">
                    <Label x:Name="LabelTitulo" Style="{StaticResource LabelDefalTitulo}"></Label>
                    <Label x:Name="LabelDescricao" Style="{StaticResource LabelDefalDescricao}"></Label>
                </StackLayout>
                <componentes:LabelAwesome Text="&#xf078;" FontSize="36" VerticalOptions="CenterAndExpand" TextColor="{StaticResource CorBotaoIcones}"/>
            </StackLayout>
      </Frame>
  </ContentView.Content>
</ContentView>